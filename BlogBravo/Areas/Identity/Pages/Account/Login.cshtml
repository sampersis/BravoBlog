                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label class="btn btn-sm btn-dark text-monospace py-0 ml-1" style="font-size:0.9rem; border-radius:25px;" asp-for="Input.Email"></label>
                    <input placeholder="Enter your email" asp-for="Input.Email" class="form-control" style="border-radius:25px;"/>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="btn btn-sm btn-dark text-monospace py-0 ml-1" style="font-size: 0.9rem; border-radius: 25px;" asp-for="Input.Password"></label>
                    <input placeholder="Enter your passsword" asp-for="Input.Password" class="form-control" style="border-radius:25px;" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                @*<div class="form-group">
