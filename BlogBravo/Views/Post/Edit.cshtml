@model BlogBravo.Models.Post

@{
    ViewData["Title"] = "Edit";
}

<div class="row alert-dark border border-dark rounded">
    <div class="col-md-12">
        <h1 class="mb-3">Edit Post - <span class="text-muted fst-italic">Blog Name</span></h1>
        <form asp-action="Edit" id="post-form" oninput="(function () {document.querySelector('#save-changes-btn').disabled = false; })();return false;">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Title" class="control-label fw-bolder h4 mr-5"></label>
                <input asp-for="Title" class="form-control border-dark" maxlength="50" id="post-title" onkeyup="(function () {document.querySelector('#post-title-count').innerText = 'Count (max. 50): ' + document.querySelector('#post-title').value.length; return false; })(); return false;" />
                <span class="alert-dark text-danger float-right" id="post-title-count" style="font-size:0.75rem;">Count (max. 50): 0</span>
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Body" class="control-label fw-bold h4"></label>
                <textarea asp-for="Body" maxlength="2500" class="form-control border-dark font-monospace" rows="10" id="post-body" onkeyup="(function () {document.querySelector('#post-body-count').innerText = 'Count (max. 2500): ' + document.querySelector('#post-body').value.length; return false; })(); return false;"></textarea>
                <span class="alert-dark text-danger float-right" id="post-body-count" style="font-size:0.75rem;">Count (max. 2500): 0</span>
                <span asp-validation-for="Body" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Tag" class="control-label fw-bold h4"></label>
                <div class="input-group">
                    <input asp-for="Tag" maxlength="50" class="form-control border-dark rounded mr-4" id="post-tag" onkeyup="(function () {document.querySelector('#post-tag-count').innerText = 'Count (max. 50): ' + document.querySelector('#post-tag').value.length; return false; })(); return false;" />
                    <span asp-validation-for="Tag" class="text-danger"></span>
                    <div class="input-group-append">
                        <input type="button" value="Create Tag" class="btn btn-outline-dark rounded" onclick="CreateTag()" />
                    </div>
                </div>
                <span class="text-danger mb-2 float-right" id="post-tag-count" style="font-size:0.75rem; padding-right: 120px;">Count (max. 50): 0</span>

                <div class="form-check-inline mt-2 mb-2" id="tag-list" style="font-size:0.75rem;">
                    <input name="first-tag" id="first-tag-input" type="checkbox" class="form-check-input" />
                    <label for="first-tag" id="first-tag" class="form-check-label mr-2">none</label>
                    <input name="second-tag" id="second-tag-input" type="checkbox" class="form-check-input" />
                    <label for="second-tag" id="second-tag" class="form-check-label mr-2">none</label>
                    <input name="third-ag" id="third-tag-input" type="checkbox" class="form-check-input" />
                    <label for="third-tag" id="third-tag" class="form-check-label mr-2">none</label>
                    <input name="fourth-tag" id="fourth-tag-input" type="checkbox" class="form-check-input" />
                    <label for="fourth-tag" id="fourth-tag" class="form-check-label mr-2">none</label>
                    <input name="fifth-tag" id="fifth-tag-input" type="checkbox" class="orm-check-input" />
                    <label for="fifth-tag" id="fifth-tag" class="form-check-label mr-2">none</label>
                    <input type="button" value="Remove Tag" id="remove-tag-btn" class="btn btn-outline-dark btn-sm rounded" style="font-size:.75rem;" onclick="RemoveTag()" />
                </div>
            </div>

            <hr />

            <div class="form-group" hidden>
                <label asp-for="BlogId" class="control-label"></label>
                <select asp-for="BlogId" class="form-control" asp-items="ViewBag.BlogId"></select>
            </div>
            <div class="form-group">
                <input id="save-changes-btn" type="submit" value="Save Changes" class="btn btn-outline-success" disabled />
                <a class="btn btn-outline-dark float-right" asp-area="" asp-controller="Home" asp-action="Index">Cancel</a>
            </div>
        </form>
    </div>
</div>

<script>
    // Form Reset
    window.onload = function () { document.querySelector("#post-form").reset(); document.querySelector('#save-changes-btn').disabled = true; };
    // Disable the Context Menu. Undo option caused problem for the counters
    window.addEventListener("contextmenu", e => e.preventDefault());
</script>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}