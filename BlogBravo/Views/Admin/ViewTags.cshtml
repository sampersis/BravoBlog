@model IEnumerable<BlogBravo.Models.Tag>

@{
    Layout = null;
}

<p>
    <a class="btn btn-secondary" asp-action="Create">Create A New Tag</a>
</p>
<table class="table table-striped text-monospace">
    <thead class="bg-secondary text-white">
        <tr>
            <th style="font-family:'Tw Cen MT'">
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td style="font-family:'Tw Cen MT'">
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td style="font-family:'Tw Cen MT'">
                    <a asp-action="Edit" asp-route-id="@item.Id"><i class="mr-1 fas fa-edit"></i></a>
                    <a asp-action="Details" asp-route-id="@item.Id"><i class="mr-1 text-success fas fa-eye"></i></a>
                    <a asp-action="DeleteTag" asp-route-id="@item.Id"><i class="text-danger fas fa-trash-alt"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>
