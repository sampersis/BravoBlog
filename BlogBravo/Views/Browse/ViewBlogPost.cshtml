@model IEnumerable<BlogBravo.Models.Post>

@{
    ViewData["Title"] = "ViewBlogPost";
}

<h1 class="bg-dark text-white text-monospace mb-2" style="width:fit-content">@ViewBag.BlogName</h1>
<a class="btn btn-outline-dark mb-3" asp-controller="Browse" asp-action="Index">Back to Blog List</a>


<table class="table table-striped text-monospace">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Body)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Created)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Views)
            </th>            
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Body)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Created)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Views)
            </td>
            
            
        </tr>
}
    </tbody>
</table>
