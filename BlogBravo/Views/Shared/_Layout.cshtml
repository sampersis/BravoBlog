<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BlogBravo</title>
    <script src="https://kit.fontawesome.com/64e875fda5.js" crossorigin="anonymous"></script>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:ital,wght@0,300;0,400;0,500;0,600;0,700;0,800;1,300;1,400;1,500;1,600;1,700;1,800&display=swap" rel="stylesheet">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Vujahday+Script&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <img src="~/images/bravoicon.png" class="img-thumbnail rounded float-start mr-1" asp-append-version="true" style="width:40px;" />
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">BlogBravo</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                        <li>
                            <div class="dropdown mr-4">
                                <button class="btn dropdown-toggle" type="button" id="post-menu" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    Post
                                </button>
                                <div class="dropdown-menu" aria-labelledby="post-menu">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Post" asp-action="Create">Create Post Page</a>
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Post" asp-action="Edit">Edit Post Page</a>
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Post" asp-action="Delete">Delete Post Page</a>
                                </div>
                            </div>
                        </li>
                        <li>
                            <form class="form-inline">
                                <div class="input-group">
                                    <input type="search" placeholder="Search..." class="form-control border border-dark">
                                    <div class="input-group-append">
                                        <span class="btn btn-outline-dark"><i class="fas fa-search"></i></span>
                                    </div>
                                </div>
                            </form>
                        </li>
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted" style="font-size:1rem;">
        <div class="container">
            &copy; @DateTime.Now.Year - Blog Bravo <i class="fab fa-linkedin"></i> <i class="fab fa-twitter-square"></i> <i class="fab fa-facebook-square"></i> - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy Policy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
